# Huginn Dokku Deployment Configuration
# Copy to .env and fill in values

# Required
HUGINN_ADMIN_PASSWORD=your-secure-password
HUGINN_ADMIN_EMAIL=admin@example.com

# Discord Integration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/yyy

# Optional: SMTP for email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_DOMAIN=gmail.com
EMAIL_FROM=huginn@yourdomain.com

# Timezone
TIMEZONE=America/Los_Angeles

# Linear Integration (for bug report pipeline)
LINEAR_API_KEY=lin_api_xxx
LINEAR_TEAM_ID=your-team-uuid

# Customer.io Integration (for support status pipeline)
CUSTOMERIO_SITE_ID=your-site-id
CUSTOMERIO_API_KEY=your-track-api-key

# Optional: Custom Linear status names (defaults shown)
LINEAR_STATUS_IN_PROGRESS=In Progress
LINEAR_STATUS_DONE=Done

# Optional: Separate Discord webhook for support notifications
DISCORD_SUPPORT_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/yyy
